// Font sizes and spacing

header-format(fontSize, lineHeight, letterSpacing)
  font-size: fontSize
  line-height: lineHeight
  letter-spacing: letterSpacing

h1, h2, h3, h4, h5, h6
  margin-top: 0
  margin-bottom: 2rem
  font-weight: 300

h1
  header-format(4.0rem, 1.2, -.1rem)

h2
  header-format(3.6rem, 1.25, -.1rem)

h3
  header-format(3.0rem, 1.3, -.1rem)

h4
  header-format(2.4rem, 1.35, -.08rem)

h5
  header-format(1.8rem, 1.5, -.05rem)

h6
  header-format(1.5rem, 1.6, 0)

/* Larger than phablet */
@media (min-width: 550px) {
  h1 { font-size: 5.0rem; }
  h2 { font-size: 4.2rem; }
  h3 { font-size: 3.6rem; }
  h4 { font-size: 3.0rem; }
  h5 { font-size: 2.4rem; }
  h6 { font-size: 1.5rem; }
}
